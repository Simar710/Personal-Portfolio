---
import Layout from "../components/Layout.astro"
---

<Layout>
    
<style>
    @import './skills.css';
</style>
    <section id = "skills" class="skills-section">
        <div class="skills-content">
            <h2>My Skills</h2>
            <div class="skills-list">
                <div class="skill">
                    <div class="skill-card">
                        <div class="skill-card-inner">
                            <div class="skill-front">
                                <img src="java-icon.svg" alt="Programming Icon" />
                                <h3>Programming Languages</h3>
                            </div>
                            <div class="skill-back">
                                <p>C, Java, Python, JavaScript, PHP, HTML, CSS, R, Bash, YML, JSON, XML R, Fortran, Ada, Cobol, SQL, Swift</p>
                            </div>
                        </div>
                    </div>
                </div>
                <div class="skill">
                    <div class="skill-card">
                        <div class="skill-card-inner">
                            <div class="skill-front">
                                <img src="reactjs-icon.svg" alt="Framework Icon" />
                                <h3>Frameworks & Libraries</h3>
                            </div>
                            <div class="skill-back">
                                <p>Spring Boot, Pandas, MatplotLib, Seaborn, React, React Native, Vis.js, Node.js, Express.js, AJAX, jQuery, Astro, Bootstrap</p>
                            </div>
                        </div>
                    </div>
                </div>
                <div class="skill">
                    <div class="skill-card">
                        <div class="skill-card-inner">
                            <div class="skill-front">
                                <img src="mysql.svg" alt="Database Icon" />
                                <h3>Database</h3>
                            </div>
                            <div class="skill-back">
                                <p>MySQL, PostgreSQL, SQL Server, ArangoDB, Azure CosmosDB, Apache Cassandra</p>
                            </div>
                        </div>
                    </div>
                </div>
                <div class="skill">
                    <div class="skill-card">
                        <div class="skill-card-inner">
                            <div class="skill-front">
                                <img src="github-icon.svg" alt="Version Control" />
                                <h3>Version Control</h3>
                            </div>
                            <div class="skill-back">
                                <p>Git, GitLab, GitHub</p>
                            </div>
                        </div>
                    </div>
                </div>
                <div class="skill">
                    <div class="skill-card">
                        <div class="skill-card-inner">
                            <div class="skill-front">
                                <img src="artificial-intelligence.svg" alt="Artficial Intelligence Icon" />
                                <h3>Machine Learning/Artificial Intelligence</h3>
                            </div>
                            <div class="skill-back">
                                <p>Django, TensorFlow, Keras, PyTorch, YOLOv8, Scikit-learn, Azure Cognitive Services, Azure OpenAI, Open AI, LLM, LangChain, LangGraph</p>
                            </div>
                        </div>
                    </div>
                </div>
                <div class="skill">
                    <div class="skill-card">
                        <div class="skill-card-inner">
                            <div class="skill-front">
                                <img src="testing-icon.svg" alt="Testing and Debugging" />
                                <h3>Testing and Debugging</h3>
                            </div>
                            <div class="skill-back">
                                <p>Charles Proxy, JUnit, Mockito, Selenium, Playwright, CodeceptJS, Cucumber, TestCafe, TDD, WireMock, Spring Cloud Contract, BDD, Blackbox, Sandbox, Automated, Regression, Unit, V&V, Exploratory, Functional Tetsing </p>
                            </div>
                        </div>
                    </div>
                </div><div class="skill">
                    <div class="skill-card">
                        <div class="skill-card-inner">
                            <div class="skill-front">
                                <img src="aws.svg" alt="Cloud Services & Infrastructure" />
                                <h3>Cloud Services and Infrastrucutre</h3>
                            </div>
                            <div class="skill-back">
                                <p>Amazon Web Services (AWS), Google Cloud Platform (GCP), Microsoft Azure, Docker, Kubernetes, Nginx, Helm, Docker Compose, VMware vRealize Automation (vRA), Helm</p>
                            </div>
                        </div>
                    </div>
                </div>
                <div class="skill">
                    <div class="skill-card">
                        <div class="skill-card-inner">
                            <div class="skill-front">
                                <img src="postman.svg" alt="DevOps Tools" />
                                <h3>DevOps Tools</h3>
                            </div>
                            <div class="skill-back">
                                <p>Jenkins, Tableau, Maven, Linux, Postman, Sentry</p>
                            </div>
                        </div>
                    </div>
                </div>
                <div class="skill">
                    <div class="skill-card">
                        <div class="skill-card-inner">
                            <div class="skill-front">
                                <img src="data_structure.svg" alt="Concepts" />
                                <h3>Concepts</h3>
                            </div>
                            <div class="skill-back">
                                <p>Full Stack Development, Cloud Technologies, Automation, Microservices Architecture, CI/CD Pipelines, Data Visualization, Machine Learning, Docker Containerization, Kubernetes Clustering, RESTful API Development, Agile Methodologies, Version Control, Data Processing Workflows, Test Automation, Object-Oriented Programming (OOP), SOLID Principles, Data Analysis, Responsive Design, Web Accessibility, Neural Network Training, Real-Time Object Detection, Cross-Functional Team Collaboration, Code Modularity, System Scalability, Data Security and Protocols</p>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </section>
</Layout>
