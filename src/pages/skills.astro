---
import Layout from "../components/Layout.astro"
---

<Layout>
    
<style>
    @import './skills.css';
</style>
    <section id = "skills" class="skills-section">
        <div class="skills-content">
            <h2>My Skills</h2>
            <div class="skills-list">
                <div class="skill">
                    <div class="skill-card">
                        <div class="skill-card-inner">
                            <div class="skill-front">
                                <img src="java-icon.svg" alt="Programming Icon" />
                                <h3>Programming Languages</h3>
                            </div>
                            <div class="skill-back">
                                <p>C, Java (Spring Boot), Python (TensorFlow, PyTorch, Keras, Scikit-learn, YOLOv8), JavaScript (node.js, React Native), HTML, CSS, R, Bash, YML, JSON, XML R, Fortran, Ada, Cobol</p>
                            </div>
                        </div>
                    </div>
                </div>
                <div class="skill">
                    <div class="skill-card">
                        <div class="skill-card-inner">
                            <div class="skill-front">
                                <img src="astro.svg" alt="Web Development Icon" />
                                <h3>Web Development</h3>
                            </div>
                            <div class="skill-back">
                                <p>HTML, CSS, React Native, Astro, Node.js</p>
                            </div>
                        </div>
                    </div>
                </div>
                <div class="skill">
                    <div class="skill-card">
                        <div class="skill-card-inner">
                            <div class="skill-front">
                                <img src="mysql.svg" alt="Database Icon" />
                                <h3>Database</h3>
                            </div>
                            <div class="skill-back">
                                <p>SQL, SQL Server, PostgreSQL</p>
                            </div>
                        </div>
                    </div>
                </div>
                <div class="skill">
                    <div class="skill-card">
                        <div class="skill-card-inner">
                            <div class="skill-front">
                                <img src="github-icon.svg" alt="Version Control" />
                                <h3>Version Control</h3>
                            </div>
                            <div class="skill-back">
                                <p>Git, GitLab, GitHub</p>
                            </div>
                        </div>
                    </div>
                </div>
                <div class="skill">
                    <div class="skill-card">
                        <div class="skill-card-inner">
                            <div class="skill-front">
                                <img src="rest-api-icon.svg" alt="Web Development Icon" />
                                <h3>API Integration</h3>
                            </div>
                            <div class="skill-back">
                                <p>Restful APIs</p>
                            </div>
                        </div>
                    </div>
                </div>
                <div class="skill">
                    <div class="skill-card">
                        <div class="skill-card-inner">
                            <div class="skill-front">
                                <img src="testing-icon.svg" alt="Testing and Debugging" />
                                <h3>Testing and Debugging</h3>
                            </div>
                            <div class="skill-back">
                                <p>Cucumber, JUnit, Automated, Regression, Unit, V&V, Exploratory, Functional Tetsing </p>
                            </div>
                        </div>
                    </div>
                </div><div class="skill">
                    <div class="skill-card">
                        <div class="skill-card-inner">
                            <div class="skill-front">
                                <img src="docker-official.svg" alt="Deployment and DevOps" />
                                <h3>Deployment and DevOps</h3>
                            </div>
                            <div class="skill-back">
                                <p>Docker, Google Cloud Platform (GCP), Kubernetes, Jenkins, </p>
                            </div>
                        </div>
                    </div>
                </div>
                <div class="skill">
                    <div class="skill-card">
                        <div class="skill-card-inner">
                            <div class="skill-front">
                                <img src="data_structure.svg" alt="Data Structure and Algorithm" />
                                <h3>Data Structure and Algorithms</h3>
                            </div>
                            <div class="skill-back">
                                <p>Sorting, Searching, Arrays, linked lists, trees, graphs, etc.</p>
                            </div>
                        </div>
                    </div>
                </div>
                <div class="skill">
                    <div class="skill-card">
                        <div class="skill-card-inner">
                            <div class="skill-front">
                                <img src="softskills.svg" alt="Soft Skills" />
                                <h3>Soft Skills</h3>
                            </div>
                            <div class="skill-back">
                                <p>Communication, Team work, adaptability, Leadership, Followership</p>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </section>
</Layout>
